<% provide(:title, "Sign in") %>
<h1>Log in</h1>

<div class="form-group signin-form">
  <%= form_for(:session, url: sessions_path) do |f| %>

    <%= f.label :email %>
    <%= f.text_field :email %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.submit "Log in", class: "btn btn-large btn-primary" %>
  <% end %>
</div>
