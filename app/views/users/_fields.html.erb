<%= f.text_field :preferred_name %>

<%= f.label :email %>
<%= f.text_field :email %>

<%= f.label :street_address %>
<%= f.text_field :street_address %>

<%= f.label :city %>
<%= f.text_field :city %>

<%= f.label :state %>
<%= f.text_field :state %>

