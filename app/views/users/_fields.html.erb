<%= f.password_field :password_confirmation %>

<% if admin_user? %>
    <%= f.label :directory_public, "Make profile public" %>
    <%= f.check_box :directory_public %>

    <%= f.label :family_id %>
    <%= number_field :family_id, in: 1..9999 %>

    <%= f.label :spouse_id %>
    <%= number_field :spouse_id, in: 1..9999 %>
<% end %>
